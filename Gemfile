source 'https://rubygems.org'

group :development do
  gem 'rake'
end

gem 'puma'
gem 'roda'
gem 'tilt'
gem 'dotenv'

# Graphql
gem 'graphql'

# Database Stack
gem 'pg'
gem 'colorize'
gem 'activerecord'
gem 'active_record_migrations' #, "~> 5.0.2.1"

# Protection :)
gem 'rack-protection'
gem 'rack-cors', require: 'rack/cors'

# Token :)
gem 'rack-jwt'

# Utilities
gem 'racksh'

group :test, :development do
  gem 'pry'
end

# Testing
group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'database_cleaner'
end
